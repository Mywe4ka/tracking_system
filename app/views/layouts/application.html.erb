<!DOCTYPE html>
<html>
<head>
  <title>TrackingSystem</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  Signed in as <%= current_user.name %> | <%= link_to 'Logout', logout_path %><br/><br/>
  <%= link_to 'Users', users_path %>
  <%= link_to 'Tickets', tickets_path %>
  <%= form_tag(search_tickets_path, method: "get", class: 'search-field') do %>  
    <%= search_field_tag :search, params[:search], placeholder: "Ticket Search" %>
    <%= button_tag "", name: nil %>   
  <% end %>
<% else %>
  <%= link_to 'Login', login_path %>
<% end %>

<%= yield %>

</body>
</html>
